@model List<PROG6212_Part2.Models.Claim>

@{
    ViewData["Title"] = "Manager View - Approve Claims";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-check-double me-2"></i>Claims Awaiting Approval
                    </h3>
                    <span class="badge bg-light text-info fs-6">@Model.Count Claims</span>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">All Caught Up!</h4>
                            <p class="text-muted">No claims awaiting approval.</p>
                            <a href="@Url.Action("ManagerDashboard", "Claim")" class="btn btn-info mt-2">
                                <i class="fas fa-tachometer-alt me-1"></i>View Dashboard
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-info">
                                    <tr>
                                        <th><i class="fas fa-hashtag me-1"></i>Claim ID</th>
                                        <th><i class="fas fa-user me-1"></i>Lecturer</th>
                                        <th><i class="fas fa-building me-1"></i>Department</th>
                                        <th><i class="fas fa-calendar me-1"></i>Month</th>
                                        <th><i class="fas fa-book me-1"></i>Course</th>
                                        <th><i class="fas fa-clock me-1"></i>Hours</th>
                                        <th><i class="fas fa-money-bill me-1"></i>Rate</th>
                                        <th><i class="fas fa-calculator me-1"></i>Total Amount</th>
                                        <th><i class="fas fa-file me-1"></i>Document</th>
                                        <th><i class="fas fa-cog me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@claim.ClaimID</span>
                                            </td>
                                            <td>@claim.LecturerName</td>
                                            <td>@claim.Department</td>
                                            <td>@claim.Month</td>
                                            <td>
                                                <div class="fw-bold">@claim.CourseCode</div>
                                                <small class="text-muted">@claim.CourseTitle</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-clock me-1"></i>@claim.HoursWorked hours
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-money-bill-wave me-1 text-success"></i>R @claim.Rate.ToString("N2")
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">
                                                    <i class="fas fa-calculator me-1"></i>R @claim.TotalAmount.ToString("N2")
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(claim.DocumentName))
                                                {
                                                    <a href="@Url.Action("Download", "Claim", new { id = claim.ClaimID })"
                                                       class="btn btn-sm btn-outline-primary" title="Download Document">
                                                        <i class="fas fa-download me-1"></i> Download
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <form method="post" asp-action="Approve" class="d-inline">
                                                    <input type="hidden" name="id" value="@claim.ClaimID" />
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-success"
                                                            onclick="return confirm('Are you sure you want to approve this claim?')">
                                                        <i class="fas fa-thumbs-up me-1"></i> Approve
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>