@model PROG6212_Part2.Models.LecturerClaimsSummaryViewModel

@{
    ViewData["Title"] = "Lecturer Claims Summary";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6">
                    <i class="fas fa-chart-bar me-2 text-success"></i>Lecturer Claims Summary
                </h1>
                <div class="btn-group">
                    <a href="@Url.Action("Dashboard", "HR")" class="btn btn-outline-primary">
                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                    </a>
                    <a href="@Url.Action("ViewAllClaims", "Claim")" class="btn btn-outline-success">
                        <i class="fas fa-list me-1"></i>All Claims
                    </a>
                    <button onclick="window.print()" class="btn btn-outline-info">
                        <i class="fas fa-print me-1"></i>Print Report
                    </button>
                </div>
            </div>
            <p class="text-muted">Comprehensive overview of claims submitted by all lecturers</p>
        </div>
    </div>

    <!-- Overall Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Lecturers
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalLecturers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Claims
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OverallTotalClaims</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">R @Model.OverallTotalAmount.ToString("N2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Approval Rate
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OverallApprovalRate.ToString("N1")%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Rejection Rate
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OverallRejectionRate.ToString("N1")%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Avg per Lecturer
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                R @(Model.TotalLecturers > 0 ? (Model.OverallTotalAmount / Model.TotalLecturers).ToString("N2") : "0.00")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calculator fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Breakdown -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Overall Claims Status Breakdown
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body py-3">
                                    <h5 class="card-title">@Model.OverallSubmitted</h5>
                                    <p class="card-text mb-0">Submitted</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-info text-white">
                                <div class="card-body py-3">
                                    <h5 class="card-title">@Model.OverallVerified</h5>
                                    <p class="card-text mb-0">Verified</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-success text-white">
                                <div class="card-body py-3">
                                    <h5 class="card-title">@Model.OverallApproved</h5>
                                    <p class="card-text mb-0">Approved</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body py-3">
                                    <h5 class="card-title">@Model.OverallRejected</h5>
                                    <p class="card-text mb-0">Rejected</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lecturer Details Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Lecturer Claims Details
                    </h5>
                    <span class="badge bg-light text-success fs-6">@Model.LecturerSummaries.Count Lecturers</span>
                </div>
                <div class="card-body">
                    @if (!Model.LecturerSummaries.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Data Available</h4>
                            <p class="text-muted">No claims have been submitted by lecturers yet.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped" id="lecturerSummaryTable">
                                <thead class="table-success">
                                    <tr>
                                        <th><i class="fas fa-user me-1"></i>Lecturer Name</th>
                                        <th><i class="fas fa-building me-1"></i>Department</th>
                                        <th><i class="fas fa-file-alt me-1"></i>Total Claims</th>
                                        <th><i class="fas fa-money-bill-wave me-1"></i>Total Amount</th>
                                        <th><i class="fas fa-calculator me-1"></i>Average per Claim</th>
                                        <th><i class="fas fa-chart-pie me-1"></i>Status Breakdown</th>
                                        <th><i class="fas fa-percentage me-1"></i>Approval Rate</th>
                                        <th><i class="fas fa-chart-line me-1"></i>Performance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lecturer in Model.LecturerSummaries)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@lecturer.LecturerName</strong>
                                            </td>
                                            <td>@lecturer.Department</td>
                                            <td>
                                                <span class="badge bg-primary fs-6">@lecturer.TotalClaims</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">R @lecturer.TotalAmount.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                <span class="text-info">R @lecturer.AverageAmount.ToString("N2")</span>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-wrap gap-1" style="max-width: 200px;">
                                                    @if (lecturer.SubmittedClaims > 0)
                                                    {
                                                        <span class="badge bg-warning" title="Submitted">@lecturer.SubmittedClaims</span>
                                                    }
                                                    @if (lecturer.VerifiedClaims > 0)
                                                    {
                                                        <span class="badge bg-info" title="Verified">@lecturer.VerifiedClaims</span>
                                                    }
                                                    @if (lecturer.ApprovedClaims > 0)
                                                    {
                                                        <span class="badge bg-success" title="Approved">@lecturer.ApprovedClaims</span>
                                                    }
                                                    @if (lecturer.RejectedClaims > 0)
                                                    {
                                                        <span class="badge bg-danger" title="Rejected">@lecturer.RejectedClaims</span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px; width: 100px;">
                                                    <div class="progress-bar bg-success"
                                                         style="width: @lecturer.ApprovalRate%;"
                                                         title="@lecturer.ApprovalRate.ToString("N1")% Approval Rate">
                                                        @lecturer.ApprovalRate.ToString("N0")%
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (lecturer.ApprovalRate >= 80)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-star me-1"></i>Excellent
                                                    </span>
                                                }
                                                else if (lecturer.ApprovalRate >= 60)
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="fas fa-thumbs-up me-1"></i>Good
                                                    </span>
                                                }
                                                else if (lecturer.ApprovalRate >= 40)
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-exclamation me-1"></i>Average
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>Needs Review
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Summary Statistics -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-chart-line me-2 text-primary"></i>Top Performers
                                        </h6>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var topLecturer in Model.LecturerSummaries.Take(3))
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    @topLecturer.LecturerName
                                                    <span class="badge bg-success rounded-pill">
                                                        R @topLecturer.TotalAmount.ToString("N2")
                                                    </span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Department Summary
                                        </h6>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var deptGroup in Model.LecturerSummaries.GroupBy(l => l.Department).OrderByDescending(g => g.Sum(l => l.TotalAmount)))
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    @deptGroup.Key
                                                    <span class="badge bg-primary rounded-pill">
                                                        @deptGroup.Sum(l => l.TotalAmount).ToString("C0")
                                                    </span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add sorting functionality to the table
            const table = document.getElementById('lecturerSummaryTable');
            if (table) {
                const headers = table.querySelectorAll('th');
                headers.forEach((header, index) => {
                    header.style.cursor = 'pointer';
                    header.addEventListener('click', () => {
                        sortTable(index);
                    });
                });
            }

            function sortTable(columnIndex) {
                const table = document.getElementById('lecturerSummaryTable');
                const tbody = table.querySelector('tbody');
                const rows = Array.from(tbody.querySelectorAll('tr'));

                const isNumeric = columnIndex === 2 || columnIndex === 3 || columnIndex === 4 || columnIndex === 6;

                rows.sort((a, b) => {
                    const aValue = a.cells[columnIndex].textContent.trim();
                    const bValue = b.cells[columnIndex].textContent.trim();

                    if (isNumeric) {
                        const aNum = parseFloat(aValue.replace(/[^0-9.-]+/g, ""));
                        const bNum = parseFloat(bValue.replace(/[^0-9.-]+/g, ""));
                        return aNum - bNum;
                    } else {
                        return aValue.localeCompare(bValue);
                    }
                });

                // Reverse if already sorted
                if (table.getAttribute('data-sort-column') === columnIndex.toString()) {
                    rows.reverse();
                    table.removeAttribute('data-sort-column');
                } else {
                    table.setAttribute('data-sort-column', columnIndex.toString());
                }

                // Clear and re-append rows
                while (tbody.firstChild) {
                    tbody.removeChild(tbody.firstChild);
                }
                rows.forEach(row => tbody.appendChild(row));
            }
        });
    </script>

    <style>
        .progress {
            background-color: #e9ecef;
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-bar {
            transition: width 0.6s ease;
            font-size: 0.75rem;
            line-height: 20px;
        }

        th:hover {
            background-color: #f8f9fa;
        }

        @@media print {
            .btn-group, .card-header .badge {
                display: none !important;
            }
        }
    </style>
}