@model PROG6212_Part2.Models.UserManagementViewModel

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6">
                    <i class="fas fa-users-cog me-2 text-primary"></i>User Management
                </h1>
                <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- User Type Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                <i class="fas fa-chalkboard-teacher me-1"></i>Lecturers
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Lecturers.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <a href="@Url.Action("AddUser", new { userType = "lecturer" })" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus me-1"></i>Add Lecturer
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                <i class="fas fa-user-tie me-1"></i>Coordinators
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Coordinators.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tie fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <a href="@Url.Action("AddUser", new { userType = "coordinator" })" class="btn btn-sm btn-success">
                            <i class="fas fa-plus me-1"></i>Add Coordinator
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                <i class="fas fa-user-cog me-1"></i>Managers
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Managers.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-cog fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <a href="@Url.Action("AddUser", new { userType = "manager" })" class="btn btn-sm btn-warning">
                            <i class="fas fa-plus me-1"></i>Add Manager
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                <i class="fas fa-user-shield me-1"></i>HR Staff
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.HRs.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-shield fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <a href="@Url.Action("AddUser", new { userType = "hr" })" class="btn btn-sm btn-info">
                            <i class="fas fa-plus me-1"></i>Add HR
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Tables -->
    <div class="row">
        <!-- Lecturers Table -->
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-chalkboard-teacher me-1"></i>Lecturers
                    </h6>
                    <span class="badge bg-light text-primary">
                        <i class="fas fa-users me-1"></i>@Model.Lecturers.Count Users
                    </span>
                </div>
                <div class="card-body">
                    @if (!Model.Lecturers.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No lecturers found.</p>
                            <a href="@Url.Action("AddUser", new { userType = "lecturer" })" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Add First Lecturer
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-id-card me-1"></i>ID</th>
                                        <th><i class="fas fa-user me-1"></i>Full Name</th>
                                        <th><i class="fas fa-envelope me-1"></i>Email</th>
                                        <th><i class="fas fa-building me-1"></i>Department</th>
                                        <th><i class="fas fa-phone me-1"></i>Phone</th>
                                        <th><i class="fas fa-graduation-cap me-1"></i>Faculty</th>
                                        <th><i class="fas fa-cog me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lecturer in Model.Lecturers)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@lecturer.ID</span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user me-1 text-muted"></i>@lecturer.FullName
                                            </td>
                                            <td>
                                                <i class="fas fa-envelope me-1 text-muted"></i>@lecturer.Email
                                            </td>
                                            <td>
                                                <i class="fas fa-building me-1 text-muted"></i>@lecturer.Department
                                            </td>
                                            <td>
                                                <i class="fas fa-phone me-1 text-muted"></i>@lecturer.PhoneNumber
                                            </td>
                                            <td>
                                                <i class="fas fa-graduation-cap me-1 text-muted"></i>@lecturer.Faculty
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("EditUser", new { userType = "lecturer", id = lecturer.ID })"
                                                       class="btn btn-outline-primary" title="Edit Lecturer">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" action="@Url.Action("DeleteUser")" class="d-inline">
                                                        <input type="hidden" name="userType" value="lecturer" />
                                                        <input type="hidden" name="id" value="@lecturer.ID" />
                                                        <button type="submit" class="btn btn-outline-danger"
                                                                onclick="return confirm('Are you sure you want to delete lecturer: @lecturer.FullName?')"
                                                                title="Delete Lecturer">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Coordinators Table -->
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-user-tie me-1"></i>Coordinators
                    </h6>
                    <span class="badge bg-light text-success">
                        <i class="fas fa-users me-1"></i>@Model.Coordinators.Count Users
                    </span>
                </div>
                <div class="card-body">
                    @if (!Model.Coordinators.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No coordinators found.</p>
                            <a href="@Url.Action("AddUser", new { userType = "coordinator" })" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>Add First Coordinator
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-id-card me-1"></i>ID</th>
                                        <th><i class="fas fa-user me-1"></i>Full Name</th>
                                        <th><i class="fas fa-envelope me-1"></i>Email</th>
                                        <th><i class="fas fa-building me-1"></i>Department</th>
                                        <th><i class="fas fa-cog me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var coordinator in Model.Coordinators)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@coordinator.ID</span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user me-1 text-muted"></i>@coordinator.FullName
                                            </td>
                                            <td>
                                                <i class="fas fa-envelope me-1 text-muted"></i>@coordinator.Email
                                            </td>
                                            <td>
                                                <i class="fas fa-building me-1 text-muted"></i>@coordinator.Department
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("EditUser", new { userType = "coordinator", id = coordinator.ID })"
                                                       class="btn btn-outline-success" title="Edit Coordinator">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" action="@Url.Action("DeleteUser")" class="d-inline">
                                                        <input type="hidden" name="userType" value="coordinator" />
                                                        <input type="hidden" name="id" value="@coordinator.ID" />
                                                        <button type="submit" class="btn btn-outline-danger"
                                                                onclick="return confirm('Are you sure you want to delete coordinator: @coordinator.FullName?')"
                                                                title="Delete Coordinator">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Managers Table -->
        <div class="col-12 mb-4">
            <div class="card shadow">
                <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-user-cog me-1"></i>Managers
                    </h6>
                    <span class="badge bg-light text-warning">
                        <i class="fas fa-users me-1"></i>@Model.Managers.Count Users
                    </span>
                </div>
                <div class="card-body">
                    @if (!Model.Managers.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user-cog fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No managers found.</p>
                            <a href="@Url.Action("AddUser", new { userType = "manager" })" class="btn btn-warning">
                                <i class="fas fa-plus me-1"></i>Add First Manager
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-id-card me-1"></i>ID</th>
                                        <th><i class="fas fa-user me-1"></i>Full Name</th>
                                        <th><i class="fas fa-envelope me-1"></i>Email</th>
                                        <th><i class="fas fa-graduation-cap me-1"></i>Faculty</th>
                                        <th><i class="fas fa-cog me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var manager in Model.Managers)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@manager.ID</span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user me-1 text-muted"></i>@manager.FullName
                                            </td>
                                            <td>
                                                <i class="fas fa-envelope me-1 text-muted"></i>@manager.Email
                                            </td>
                                            <td>
                                                <i class="fas fa-graduation-cap me-1 text-muted"></i>@manager.Faculty
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("EditUser", new { userType = "manager", id = manager.ID })"
                                                       class="btn btn-outline-warning" title="Edit Manager">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" action="@Url.Action("DeleteUser")" class="d-inline">
                                                        <input type="hidden" name="userType" value="manager" />
                                                        <input type="hidden" name="id" value="@manager.ID" />
                                                        <button type="submit" class="btn btn-outline-danger"
                                                                onclick="return confirm('Are you sure you want to delete manager: @manager.FullName?')"
                                                                title="Delete Manager">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- HR Staff Table -->
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-user-shield me-1"></i>HR Staff
                    </h6>
                    <span class="badge bg-light text-info">
                        <i class="fas fa-users me-1"></i>@Model.HRs.Count Users
                    </span>
                </div>
                <div class="card-body">
                    @if (!Model.HRs.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user-shield fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No HR staff found.</p>
                            <a href="@Url.Action("AddUser", new { userType = "hr" })" class="btn btn-info">
                                <i class="fas fa-plus me-1"></i>Add First HR Staff
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-id-card me-1"></i>ID</th>
                                        <th><i class="fas fa-user me-1"></i>Full Name</th>
                                        <th><i class="fas fa-envelope me-1"></i>Email</th>
                                        <th><i class="fas fa-building me-1"></i>Department</th>
                                        <th><i class="fas fa-cog me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hr in Model.HRs)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@hr.ID</span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user me-1 text-muted"></i>@hr.FullName
                                                @if (hr.ID == 1)
                                                {
                                                    <span class="badge bg-dark ms-1" title="Primary HR User">
                                                        <i class="fas fa-crown me-1"></i>Primary
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <i class="fas fa-envelope me-1 text-muted"></i>@hr.Email
                                            </td>
                                            <td>
                                                <i class="fas fa-building me-1 text-muted"></i>@hr.Department
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("EditUser", new { userType = "hr", id = hr.ID })"
                                                       class="btn btn-outline-info" title="Edit HR Staff">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (hr.ID != 1)
                                                    {
                                                        <form method="post" action="@Url.Action("DeleteUser")" class="d-inline">
                                                            <input type="hidden" name="userType" value="hr" />
                                                            <input type="hidden" name="id" value="@hr.ID" />
                                                            <button type="submit" class="btn btn-outline-danger"
                                                                    onclick="return confirm('Are you sure you want to delete HR staff: @hr.FullName?')"
                                                                    title="Delete HR Staff">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-outline-secondary" disabled
                                                                title="Cannot delete primary HR user">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>