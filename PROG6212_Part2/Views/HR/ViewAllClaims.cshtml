@model List<PROG6212_Part2.Models.Claim>

@{
    ViewData["Title"] = "All Claims";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-list-alt me-2"></i>All Claims
                    </h3>
                    <div>
                        <a href="@Url.Action("Dashboard")" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                        </a>
                        <span class="badge bg-light text-info fs-6">@Model.Count Claims</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Claims Found</h4>
                            <p class="text-muted">No claims have been submitted yet.</p>
                        </div>
                    }
                    else
                    {
                        <!-- Claims Summary -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center py-3">
                                        <i class="fas fa-clock fa-2x mb-2"></i>
                                        <h5>@Model.Count(c => c.Status == "Submitted")</h5>
                                        <small>Submitted</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center py-3">
                                        <i class="fas fa-check-circle fa-2x mb-2"></i>
                                        <h5>@Model.Count(c => c.Status == "Verified")</h5>
                                        <small>Verified</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center py-3">
                                        <i class="fas fa-thumbs-up fa-2x mb-2"></i>
                                        <h5>@Model.Count(c => c.Status == "Approved")</h5>
                                        <small>Approved</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center py-3">
                                        <i class="fas fa-times-circle fa-2x mb-2"></i>
                                        <h5>@Model.Count(c => c.Status == "Rejected")</h5>
                                        <small>Rejected</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="fas fa-hashtag me-1"></i>Claim ID</th>
                                        <th><i class="fas fa-user me-1"></i>Lecturer</th>
                                        <th><i class="fas fa-building me-1"></i>Department</th>
                                        <th><i class="fas fa-calendar me-1"></i>Month</th>
                                        <th><i class="fas fa-book me-1"></i>Course</th>
                                        <th><i class="fas fa-clock me-1"></i>Hours</th>
                                        <th><i class="fas fa-money-bill me-1"></i>Rate</th>
                                        <th><i class="fas fa-calculator me-1"></i>Total Amount</th>
                                        <th><i class="fas fa-tag me-1"></i>Status</th>
                                        <th><i class="fas fa-file me-1"></i>Document</th>
                                        <th><i class="fas fa-cog me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@claim.ClaimID</span>
                                            </td>
                                            <td>
                                                <div class="fw-bold">@claim.LecturerName</div>
                                            </td>
                                            <td>@claim.Department</td>
                                            <td>@claim.Month</td>
                                            <td>
                                                <div class="fw-bold">@claim.CourseCode</div>
                                                <small class="text-muted">@claim.CourseTitle</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-clock me-1"></i>@claim.HoursWorked hours
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-money-bill-wave me-1 text-success"></i>R @claim.Rate.ToString("N2")
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">
                                                    <i class="fas fa-calculator me-1"></i>R @claim.TotalAmount.ToString("N2")
                                                </span>
                                            </td>
                                            <td>
                                                @{
                                                    var statusBadge = claim.Status switch
                                                    {
                                                        "Submitted" => "bg-warning",
                                                        "Verified" => "bg-info",
                                                        "Approved" => "bg-success",
                                                        "Rejected" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                    var statusIcon = claim.Status switch
                                                    {
                                                        "Submitted" => "fa-clock",
                                                        "Verified" => "fa-check-circle",
                                                        "Approved" => "fa-thumbs-up",
                                                        "Rejected" => "fa-times-circle",
                                                        _ => "fa-question-circle"
                                                    };
                                                }
                                                <span class="badge @statusBadge">
                                                    <i class="fas @statusIcon me-1"></i>@claim.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(claim.DocumentName))
                                                {
                                                    <span class="text-truncate" style="max-width: 150px;"
                                                          title="@claim.DocumentName">
                                                        <i class="fas fa-file me-1"></i>@claim.DocumentName
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Download", "Claim", new { id = claim.ClaimID })"
                                                       class="btn btn-outline-primary" title="Download Document">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    <button class="btn btn-outline-info"
                                                            title="View Details"
                                                            onclick="showClaimDetails(@claim.ClaimID)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Total Summary -->
                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                                        <h5 class="text-primary">@Model.Sum(c => c.HoursWorked).ToString("N1")</h5>
                                        <small>Total Hours</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-money-bill-wave fa-2x text-success mb-2"></i>
                                        <h5 class="text-success">R @Model.Sum(c => c.TotalAmount).ToString("N2")</h5>
                                        <small>Total Amount</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-users fa-2x text-info mb-2"></i>
                                        <h5 class="text-info">@Model.Select(c => c.LecturerName).Distinct().Count()</h5>
                                        <small>Unique Lecturers</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showClaimDetails(claimId) {
            
            alert('Claim ID: ' + claimId + '\nThis would show detailed claim information in a modal.');
        }
    </script>
}