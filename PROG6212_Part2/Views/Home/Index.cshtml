@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold text-primary mb-4">
                Welcome to College Claims System
            </h1>
            <p class="lead mb-4">
                Streamline your claim submission and management process with our comprehensive platform.
                Designed for lecturers, coordinators, managers, and HR professionals.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a href="/Account/Login" class="btn btn-primary btn-lg px-4 me-md-2">
                    <i class="fas fa-sign-in-alt me-2"></i>Get Started
                </a>
                <a href="#features" class="btn btn-outline-secondary btn-lg px-4">
                    Learn More
                </a>
            </div>
        </div>
        <div class="col-lg-6">
            <img src="https://via.placeholder.com/500x300/007bff/ffffff?text=College+Claims+System"
                 class="img-fluid rounded shadow" alt="College Claims System">
        </div>
    </div>

    <!-- Features Section -->
    <div id="features" class="row mt-5 pt-5">
        <div class="col-12 text-center mb-5">
            <h2 class="fw-bold">System Features</h2>
            <p class="text-muted">Comprehensive claim management for all user roles</p>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon bg-primary rounded-circle p-3 mb-3 mx-auto">
                        <i class="fas fa-user-graduate fa-2x text-white"></i>
                    </div>
                    <h5 class="card-title">For Lecturers</h5>
                    <p class="card-text text-muted">
                        Submit claims, track status, and manage your teaching hours efficiently.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon bg-success rounded-circle p-3 mb-3 mx-auto">
                        <i class="fas fa-user-tie fa-2x text-white"></i>
                    </div>
                    <h5 class="card-title">For Coordinators</h5>
                    <p class="card-text text-muted">
                        Verify claims and ensure accuracy before manager approval.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon bg-warning rounded-circle p-3 mb-3 mx-auto">
                        <i class="fas fa-user-cog fa-2x text-white"></i>
                    </div>
                    <h5 class="card-title">For Managers</h5>
                    <p class="card-text text-muted">
                        Approve verified claims and manage departmental budgets.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon bg-info rounded-circle p-3 mb-3 mx-auto">
                        <i class="fas fa-users-cog fa-2x text-white"></i>
                    </div>
                    <h5 class="card-title">For HR</h5>
                    <p class="card-text text-muted">
                        Comprehensive user management and system oversight.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .feature-icon {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>