<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROG6212_Part2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- jQuery in head for validation scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-university me-2"></i>
                    <strong>College Claims System</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (Context.Session.GetString("Role") == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("SubmitClaim", "Lecturer")">
                                    <i class="fas fa-plus-circle me-1"></i>Submit Claim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ViewClaims", "Lecturer")">
                                    <i class="fas fa-list me-1"></i>My Claims
                                </a>
                            </li>
                        }
                        else if (Context.Session.GetString("Role") == "Coordinator")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("CoordinatorView", "Claim")">
                                    <i class="fas fa-tasks me-1"></i>Verify Claims
                                    @{
                                        var submittedCount = PROG6212_Part2.Controllers.ClaimController._claims.Count(c => c.Status == "Submitted");
                                    }
                                    @if (submittedCount > 0)
                                    {
                                        <span class="badge bg-warning ms-1">@submittedCount</span>
                                    }
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ViewAllClaims", "Claim")">
                                    <i class="fas fa-list-alt me-1"></i>All Claims
                                </a>
                            </li>
                        }
                        else if (Context.Session.GetString("Role") == "Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ManagerDashboard", "Claim")">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ManagerView", "Claim")">
                                    <i class="fas fa-check-double me-1"></i>Approve Claims
                                    @{
                                        var verifiedCount = PROG6212_Part2.Controllers.ClaimController._claims.Count(c => c.Status == "Verified");
                                    }
                                    @if (verifiedCount > 0)
                                    {
                                        <span class="badge bg-info ms-1">@verifiedCount</span>
                                    }
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ManagerAllClaims", "Claim")">
                                    <i class="fas fa-list-alt me-1"></i>All Claims
                                </a>
                            </li>
                        }
                        else if (Context.Session.GetString("Role") == "HR")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Dashboard", "HR")">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ViewAllClaims", "Claim")">
                                    <i class="fas fa-list-alt me-1"></i>All Claims
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("LecturerClaimsSummary", "HR")">
                                    <i class="fas fa-chart-bar me-1"></i>Claims Summary
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ManageUsers", "HR")">
                                    <i class="fas fa-users-cog me-1"></i>Manage Users
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Role") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>
                                    @Context.Session.GetString("FullName") (@Context.Session.GetString("Role"))
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Account")">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - College Claims System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>